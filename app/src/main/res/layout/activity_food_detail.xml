<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.FoodDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgFood"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="24dp"
                android:src="@drawable/logo"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/imgFood"
                android:layout_height="wrap_content"
                android:text="Nama Makanan"
                android:textSize="18sp"
                android:id="@+id/tvFoodName"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="24dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFoodName"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="24dp"
                android:id="@+id/tvFoodDescInfo"
                android:layout_marginHorizontal="24dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFoodDescInfo"
                android:layout_height="wrap_content"
                tools:text="Description Description Description Description Description Description "
                android:layout_marginTop="12dp"
                android:id="@+id/tvFoodDesc"
                android:textColor="@color/black"
                android:layout_marginHorizontal="24dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFoodDesc"
                android:layout_height="wrap_content"
                android:text="Resep"
                android:layout_marginTop="24dp"
                android:id="@+id/tvFoodRecipeInfo"
                android:layout_marginHorizontal="24dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFoodRecipeInfo"
                android:layout_height="wrap_content"
                tools:text="Resep Resep Resep Resep Resep Resep Resep Resep Resep Resep Resep Resep "
                android:layout_marginTop="12dp"
                android:id="@+id/tvFoodRecipe"
                android:textColor="@color/black"
                android:layout_marginHorizontal="24dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>