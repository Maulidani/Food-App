<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skripsi.traditionalfood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TraditionalFood"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.LoginAdminActivity"></activity>
        <activity android:name=".ui.user.FoodDetailActivity" />
        <activity android:name=".ui.user.HomeUserActivity" />
        <activity android:name=".ui.admin.FoodActivity" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.admin.InputEditFoodActivity" />
        <activity android:name=".ui.admin.HomeAdminActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>